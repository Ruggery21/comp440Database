<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".QueryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layoutOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="25sp"
                android:text="User's Blog(s) with Positive Comments:"/>

            <EditText
                android:id="@+id/posUser"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="93dp"
                android:gravity="center"
                android:hint="username"/>

            <Button
                android:id="@+id/posSearch"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_toRightOf="@+id/posUser"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:text="Search"/>

            <TextView
                android:id="@+id/posResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/posUser"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="35sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutOne">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="25sp"
                android:text="User with Most Blog Posts on Date:"/>

            <EditText
                android:id="@+id/mostDate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="93dp"
                android:gravity="center"
                android:hint="YYYY-MM-DD"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/mostSearch"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_toRightOf="@+id/mostDate"
                android:text="Search"/>

            <TextView
                android:id="@+id/mostResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mostSearch"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="35sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutTwo">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="25sp"
                android:text="User(s) Followed By Both:"/>

            <EditText
                android:id="@+id/userX"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:gravity="center"
                android:hint="username"/>

            <EditText
                android:id="@+id/userY"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_toRightOf="@+id/userX"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:gravity="center"
                android:hint="username"/>

            <Button
                android:id="@+id/followSearch"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_toRightOf="@+id/userY"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:text="Search"/>

            <TextView
                android:id="@+id/followResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userY"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="35sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutThree">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:text="All Blog(s) with Tag:"/>

            <EditText
                android:id="@+id/tagBox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="15dp"
                android:layout_marginStart="93dp"
                android:gravity="center"
                android:hint="tag"/>

            <Button
                android:id="@+id/tagSearch"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_toRightOf="@+id/tagBox"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:text="Search"/>

            <TextView
                android:id="@+id/tagResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tagBox"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="35sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutFive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutFour">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="25sp"
                android:text="User(s) Who Never Posted:"/>

            <Button
                android:id="@+id/neverSearch"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:text="Search"/>

            <TextView
                android:id="@+id/neverResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/neverSearch"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="35sp"/>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>